<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/red_border">
    
    <ImageView
        android:id="@+id/seckill_img"
        android:layout_width="match_parent"
        tools:src="@mipmap/ic_launcher"
        android:layout_height="70dp" />
    
    <TextView
        android:id="@+id/current_price_text"
        android:layout_width="wrap_content"
        android:layout_below="@+id/seckill_img"
        android:layout_alignLeft="@+id/seckill_img"
        android:textColor="@android:color/black"
        tools:text="90"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/original_price_text"
        android:layout_toRightOf="@+id/current_price_text"
        android:layout_width="wrap_content"
        android:layout_below="@+id/seckill_img"
        android:layout_marginLeft="20dp"
        android:textColor="#c6c6c6"
        tools:text="100"
        android:layout_height="wrap_content" />
</RelativeLayout>