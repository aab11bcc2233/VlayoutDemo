<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/commodity_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/commodity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/commodity_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/commodity_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#222222"
        android:textSize="14sp"
        tools:text="商品名称" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_group"
        android:layout_alignLeft="@+id/commodity_name"
        android:layout_below="@+id/commodity_name"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/commodity_current_price"
        android:layout_alignLeft="@+id/tag_group"
        android:layout_marginTop="5dp"
        tools:text="10"
        android:layout_below="@+id/tag_group"
        android:layout_width="wrap_content"
        android:textColor="#222"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/commodity_original_price"
        android:layout_toRightOf="@+id/commodity_current_price"
        android:layout_alignTop="@+id/commodity_current_price"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:textColor="#666"
        tools:text="20"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        tools:src="@mipmap/ic_launcher"
        android:layout_height="wrap_content" />
</RelativeLayout>